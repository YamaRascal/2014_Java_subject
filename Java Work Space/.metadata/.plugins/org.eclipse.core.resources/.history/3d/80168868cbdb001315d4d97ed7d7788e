import java.util.Scanner;

public class Ex040 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		
		int ms ,mo ;
		double res, stu1,stu2;
		System.out.print("学生なら　1　を入力して、\nそれ以外の方は　2 を押してください");
		stu1 = scan.nextInt();
		System.out.print("1ヶ月分ですか？\n3ヶ月分ですか？\n6ヶ月分ですか？");
		ms = scan.nextInt();
		System.out.print("片道料金ですか？");
		mo = scan.nextInt();
		
		res =((ms*30)*mo*1.08); //税込み　素
		
		if(ms == 1 ){
			res = res*0.97;		
		}else if(ms == 3){
			res =res*0.96;
		}else if(ms ==6){
			res =res*0.95;
		}
		if(stu1 == 1){
			stu2 =res/2;
		}else if(stu1 == 2){
			stu2 = res ;
		}else System.out.println("正しく有りません。学生かどうかで1か2を入力してください");
		
		
		System.out.println("料金は、" + Math.round((ms*30)*mo*1.08) + ("円（税込み）です"));
	}

}
